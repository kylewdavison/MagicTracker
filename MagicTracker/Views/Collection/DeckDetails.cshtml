@model IEnumerable<MagicTracker.Models.CollectionItem>

@{
    ViewBag.Title = "DeckDetails";
}

<h2>DeckDetails</h2>

<p>
    @Html.ActionLink("Create New", "CreateDeck")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CardId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Printing)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MultiverseId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFoil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InUse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ForTrade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Holder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeckId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CardId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Printing)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MultiverseId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsFoil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InUse)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ForTrade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Holder)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeckId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.CardId }) |
            @Html.ActionLink("Details", "Details", new { id = item.CardId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.CardId })
        </td>
    </tr>
}

</table>
