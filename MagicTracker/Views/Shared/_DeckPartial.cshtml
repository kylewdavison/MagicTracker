@model IEnumerable<MagicTracker.Models.CollectionItem>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Printing)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFoil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InUse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ForTrade)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        var imgLink = "http://gatherer.wizards.com/Handlers/Image.ashx?multiverseid=" + item.MultiverseId.ToString() + "&type=card";
        var gathererLink = "http://gatherer.wizards.com/pages/card/Details.aspx?multiverseid=" + item.MultiverseId.ToString() + "&type=card";

        <tr>
            <td>
                <a href="@Url.Action("CardDetails", "Collection", new {id = item.CardId})" rel="popover" data-img="@imgLink">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Printing)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsFoil)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InUse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ForTrade)
            </td>
            <td>
                @Html.ActionLink("Edit", "CardEdit", new { id = item.CardId }) |
                @Html.ActionLink("Details", "CardDetails", new { id = item.CardId }) |
                @Html.ActionLink("Delete", "CardDelete", new { id = item.CardId })
            </td>
        </tr>
    }
</table>