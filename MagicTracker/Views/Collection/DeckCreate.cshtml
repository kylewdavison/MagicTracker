@model MagicTracker.Models.Deck.DeckCreate

@{
    ViewBag.Title = "DeckCreate";
}

<h2>New Deck</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Create New Deck</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CardListString, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" >
                @Html.TextAreaFor(model => model.CardListString, new { htmlAttributes = new { @class = "form-control", id= "test" } })
                @Html.ValidationMessageFor(model => model.CardListString, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "DeckIndex")
</div>

<link href="~/Content/styles.css" rel="stylesheet" type="text/css" />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
