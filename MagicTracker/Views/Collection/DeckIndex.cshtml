@model IEnumerable<MagicTracker.Models.Deck.DeckItem>

@{
    ViewBag.Title = "DeckIndex";
}

<h2>Your Decks</h2>

<p>
    @Html.ActionLink("Create New", "DeckCreate")
</p>



@{ int i = 0;}
@foreach (var item in Model)
{
<div class="accordion" id="accordion_@i">
    <div class="card">
        <div class="card-header" id="card_@i">
            <h4 class="mb-0">
                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne_@i" aria-expanded="false" aria-controls="collapseOne" href="#collapseOne_@i">
                    @Html.DisplayFor(modelItem => item.Name)
                </button>
            </h4>
        </div>

        <div id="collapseOne_@i" class="collapse" aria-labelledby="card_@i" data-parent="accordion_@i">
            <div class="card-body">
                @Html.ActionLink("Edit", "DeckImportEdit", new { id = item.DeckId }) |
                @Html.ActionLink("Delete Deck", "DeckDelete", new { id = item.DeckId }) |
                @Html.ActionLink("Delete Cards", "DeckDeleteComplete", new { id = item.DeckId })|
                @{Html.RenderAction("DeckDetailsPartial", new { id = item.DeckId });}
            </div>
        </div>
    </div>
</div>
i++;
}
